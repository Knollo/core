{% block head %}
<!DOCTYPE html>
<html lang="{{ lang() }}" dir="{{ langdirection() }}">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset={{ _charset }}"/>
    <title>{{ pagevar.title }}</title>
    <meta name="description" content="{{ meta.get('description') }}"/>
    <meta name="keywords" content="{{ meta.get('keywords') }}"/>
    <meta http-equiv="X-UA-Compatible" content="chrome=1"/>
    <link rel="shortcut icon" href="{{ zasset('@CoreBundle:images/favicon.ico') }}" />
    {{ css.add('bundles/andreas08theme/css/fluid960gs/reset.css') }}
    {{ css.add('bundles/andreas08theme/css/fluid960gs/' ~ themevar.basecss ~ '.css') }}
    {{ css.add('bundles/andreas08theme/css/style.css') }}
</head>
<body>
<div id="theme_page_container" class="container_16">
    <div id="theme_header">
        <h1 class="title"><a href="{{ path('homepage') }}">{{ modvars.ZConfig.sitename }}</a></h1>
        <h2 class="slogan">{{ modvars.ZConfig.slogan }}</h2>
    </div>
    {% endblock %}
    {% block topnav %}
        <div id="theme_navigation_bar" class="z-clearfix">
            {% set topnavblock %}{#}{ showblockposition('topnav') }#}{% endset %}
            {% if topnavblock is empty %}
                <ul class="z-floatleft">
                    <li><a href="{{ path('homepage') }}" title="{{ __("Go to the site's home page") }}">{{ __('Home') }}</a></li>
                    <li><a href="{#{ path('zikulausersmodule_user_index') }#}" title="{{ __('Go to your account panel') }}">{{ __("My Account") }}</a></li>
                    <li><a href="{#{ path('zikulasearchmodule_user_index') }#}" title="{{ __('Search this site') }}">{{ __("Site search") }}</a></li>
                </ul>
            {% else %}
                {{ topnavblock }}
            {% endif %}
            {{ showblockposition('search') }}
        </div>
    {% endblock %}
    {% block content %}
        <div id="theme_contents">
            {{ maincontent|raw }}
        </div>
    {% endblock %}
    {% block footer %}
        <div id="theme_footer">
            <p>{{ __('Powered by') }} <a href="http://zikula.org/">Zikula</a></p>
        </div>
    {% endblock %}
</div>
</body>
</html>